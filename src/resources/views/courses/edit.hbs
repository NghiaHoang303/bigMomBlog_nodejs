<div class="mt-4">
    <form method="POST" action="/courses/{{course._id}}?_method=PUT" class="m-5">
        <div class=" form-group form-style">
            <h2>Update Course</h2>
            <div class="mb-3 ">
                <label for="inputName">Name course</label>
                <input type="text" class="form-control" value="{{course.name}}" id="inputName" name="name">
            </div>

            <div class="mb-3 ">
                <label for="inputDescription">Description course</label>
                <textarea type="text" class="form-control"  id="inputDescription" name= "description">
                    {{course.description}}
                </textarea>
                
            </div>

            <div class="mb-3 ">
                <label for="inputVideoId">VideoId</label>
                <input type="text" class="form-control" value="{{course.videoId}}" id="inputVideoId" name="videoId">
            </div>

            <div class="mb-3 ">
                <label for="inputLevel">Level</label>
                <input type="text" class="form-control" value="{{course.level}}" id="inputLevel" name="level">
            </div>

            <div class="">
                <div class="col-lg-2">
                    <button type="submit" class="btn btn-primary ">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>
